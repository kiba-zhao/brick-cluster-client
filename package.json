{
  "name": "brick-cluster-client",
  "version": "0.1.0",
  "description": "cluster-client package for brick-engine",
  "main": "index.js",
  "types": "typings/index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./dist/brick-cluster-client.mjs"
    },
    "./": "./"
  },
  "scripts": {
    "docs": "jsdoc -c conf.json",
    "build:mjs": "gen-esm-wrapper . ./dist/brick-cluster-client.mjs",
    "build": "npm run build:mjs && tsc -d",
    "build:w": "tsc -d -w",
    "lint": "eslint --fix .",
    "check": "npm run build && npm run lint",
    "test": "npm run check && npm run test:cov",
    "test:watch": "node ./node_modules/.bin/jest --watch",
    "test:cov": "nyc --reporter=lcov --reporter=text -t coverage --clean ./node_modules/.bin/jest --coverage --env=node --runInBand"
  },
  "files": [
    "typings",
    "package.json",
    "bin",
    "lib",
    "plugins",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiba-zhao/brick-cluster-client.git"
  },
  "keywords": [
    "brick",
    "brick-engine",
    "cluster",
    "leader",
    "follower",
    "cluster-client"
  ],
  "author": "kiba.x.zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiba-zhao/brick-cluster-client/issues"
  },
  "homepage": "https://github.com/kiba-zhao/brick-cluster-client#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.20",
    "babel-eslint": "^10.1.0",
    "brick-cluster": "^0.2.0",
    "brick-engine": "^0.10.3",
    "coffee": "^5.4.0",
    "eslint": "^7.31.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "faker": "^5.5.3",
    "gen-esm-wrapper": "^1.1.2",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "minami": "^1.2.3",
    "nyc": "^15.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "cluster-client": "^3.0.1",
    "debug": "^4.3.1",
    "lodash": "^4.17.20",
    "sdk-base": "^3.6.0"
  },
  "peerDependencies": {
    "brick-engine": "^0.10.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {},
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "bin/**/*.js",
      "lib/**/*.js",
      "plugins/**/*.js",
      "!**/index.js"
    ],
    "coverageReporters": [
      "json"
    ]
  }
}
